{
    "editor.fontSize": 14,
    "editor.wordWrap": "on",
    "files.trimTrailingWhitespace": true,

    "search.mode": "newEditor",

    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["C-i"],
            "after": ["C-t"]
        },
        {
            "before": ["C-d"],
            "after": ["Del"]
        },
        {
            "before": ["C-j"],
            "commands": ["editor.action.insertSnippet"]
        }
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["j"],
            "after": ["g", "j"]
        },
        {
            "before": ["k"],
            "after": ["g", "k"]
        },
        {
            "before": ["J"],
            "after": ["8", "j"]
        },
        {
            "before": ["K"],
            "after": ["8", "k"]
        },
        {
            "before": ["<C-n>"],
            "commands": [":tabnext"]
        },
        {
            "before": ["<C-p>"],
            "commands": [":tabprev"]
        },
        {
            "before": ["<leader>", "w"],
            "commands": [
                {
                    "command": "workbench.action.files.save"
                },
                {
                    "command": "workbench.action.tasks.runTask",
                    "args": "Lint Current File"
                },
                {
                    "command": "workbench.action.tasks.runTask",
                    "args": "Collect Build Problems"
                }
            ]
        },
        {
            "before": ["<leader>", "<leader>", "f"],
            "commands": [
                {
                    "command": "workbench.action.tasks.runTask",
                    "args": "Format Current File"
                }
            ]
        },
        {
            "before": ["<leader>", "o"],
            "commands": ["workbench.action.quickOpen"]
        },
        {
            "before": ["<leader>", "t"],
            "commands": ["workbench.action.tasks.runTask"]
        },
        {
            "before": ["<leader>", "m"],
            "commands": ["editor.action.marker.next"],
            "when": "editorTextFocus"
        },
        {
            "before": ["<leader>", "b"],
            "commands": [
                {
                    "command": "workbench.action.tasks.runTask",
                    "args": "Build Project"
                }
            ]
        },
        {
            "before": ["<leader>", "c"],
            "commands": [
                {
                    "command": "workbench.action.tasks.runTask",
                    "args": "Collect Build Problems"
                }
            ]
        },
        {
            "before": ["<leader>", "r"],
            "commands": [
                {
                    "command": "workbench.action.tasks.runTask",
                    "args": "Run Project"
                }
            ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>", "g"],
            "after": ["v", "i", "w", "<leader>", "g"]
        },
        {
            "before": ["<leader>", ","],
            "after": ["v", "i", "w", "g", "a"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["g", "s"],
            "commands": [
                {
                    "command": "workbench.action.tasks.runTask",
                    "args": "Search Google"
                }
            ]
        },
        {
            "before": ["g", "a"],
            "commands": [
                {
                    "command": "workbench.action.tasks.runTask",
                    "args": "Search Apple Docs"
                }
            ]
        },
        {
            "before": ["<leader>", "g"],
            "commands": ["workbench.action.findInFiles"]
        }
    ],
    "vim.visualModeKeyBindings": [
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
    },

    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.blame.statusBarItem.enabled": false
}