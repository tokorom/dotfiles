[user]
  name = tokorom
  email = tokorom@gmail.com
[core]  
  quotepath = false
  excludesfile = ~/.global_gitignore
  editor = vim
  pager = delta --plus-color="#003400" --minus-color="#340001" --theme='Monokai Extended'
[init]
	defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[color] 
  ui = auto
[alias]
  ad = add
  sw = switch
  swc = switch -c
  swm = switch main
  res = restore
  cm = commit
  cma = commit -a
  cmi = commit --interactive
  amend = commit --amend -a
  st = status ./
  stn = status --untracked-files=no ./
  rmc = rm --cached
  br = branch
  brr = branch -a
  me = merge
  ms = merge --squash
  re = reset --hard
  rb = rebase
  rbm = rebase main
  pl = pull
  plm = pull origin main
  plh = pull origin HEAD
  plu = pull upstream main
  ps = push
  psm = push origin main
  psh = push origin HEAD
  psu = push upstream main
  df = diff --ignore-space-change
  dfs = diff --staged --ignore-space-change
  dfl = diff --name-status
  l = log
  ll = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  lg = log --graph
  ls = log --stat
  lp = log -p --stat
  lo = log --oneline --decorate
  type = cat-file -t
  dump = cat-file -p
  rv = remote -v
  ru = remote update
  cancel = !git add . && git commit -a -m 'Temporary commit for cancel' && git reset --hard HEAD~
  dft = difftool
  met = mergetool
[pager]
  color = true
[status]
  color = auto
[http]
  sslVerify = false
[push]
  default = current

[diff]
  color = auto
  rename = copy

[pull]
	rebase = false
