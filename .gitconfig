[user]
  name = tokorom
  email = tokorom@gmail.com
[core]  
  quotepath = false
  excludesfile = ~/.global_gitignore
  editor = /usr/bin/vim
[color] 
  ui = auto
[alias]
  ad = add
  co = checkout
  cob = checkout -b
  com = checkout master
  track = checkout --track
  cm = commit
  cma = commit -a
  cmi = commit --interactive
  amend = commit --amend -a
  st = status ./
  stn = status --untracked-files=no ./
  rmc = rm --cached
  br = branch
  brr = branch -a
  me = merge
  ms = merge --squash
  re = reset --hard
  rb = rebase
  rbm = rebase master
  pl = pull
  plm = pull origin master
  plh = pull origin HEAD
  plu = pull upstream master
  ps = push
  psm = push origin master
  psh = push origin HEAD
  psu = push upstream master
  df = diff --ignore-space-change
  dfs = diff --staged --ignore-space-change
  dfl = diff --name-status
  l = log
  ll = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  lg = log --graph
  ls = log --stat
  lp = log -p --stat
  lo = log --oneline --decorate
  type = cat-file -t
  dump = cat-file -p
  rv = remote -v
  ru = remote update
  cancel = !git add . && git commit -a -m 'Temporary commit for cancel' && git reset --hard HEAD~
  dft = difftool
  met = mergetool
[pager]
  color = true
  log = if (type diff-highlight 1>/dev/null) then (diff-highlight | less) else (less) fi
  show = if (type diff-highlight 1>/dev/null) then (diff-highlight | less) else (less) fi
  diff = if (type diff-highlight 1>/dev/null) then (diff-highlight | less) else (less) fi
[status]
  color = auto
[http]
  sslVerify = false
[push]
  default = current

[diff]
  color = auto
  rename = copy
  tool = Kaleidoscope
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  prompt = false
[merge]
  tool = Kaleidoscope
[merge "mergepbx"]
	name = Xcode project files merger
	driver = mergepbx %O %A %B
	note = auto-generated configuration by `cpad manifest ios`

[include]
  path = ~/.gitconfig.local

[hub]
  host = github.cookpad.com
	host = ghe.ckpd.co
